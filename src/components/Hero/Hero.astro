---
import { getI18N } from "../i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section class="flex flex-col md:flex-row p-4 items-center justify-around">
  <div data-aos={"fade-right"} class="p-4 text-center md:text-left">
    <h1 class="text-5xl md:text-6xl">
      {i18n.title}
    </h1>
    <div class="mt-8 text-2xl md:text-3xl text-balance">
      <p>{i18n.hero.title1}</p>
      <p>{i18n.hero.title2} <strong class="text-fblue">{i18n.hero.title3}</strong></p>
    </div>
  </div>
  <img
    data-aos={"fade-left"}
    src="/icons/hero.webp"
    alt="Play Factory Logo"
    class="rounded-md w-full max-w-[700px] lg:max-w-[800px] xl:max-w-[900px] shadow-lg shadow-fblue"
  />
</section>
